{
  "info": {
    "name": "Booksy Iranian API Collection",
    "description": "Comprehensive API collection for Booksy with Iranian/Persian test data\n\nIncludes realistic Iranian data:\n- Persian names and locations\n- Iranian Rial (IRR) currency\n- ZarinPal payment gateway\n- Iranian mobile numbers (09XX)\n- Tehran business hours\n\nAll seed data values are pre-populated from the database seeders.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "booksy-iranian-api-collection",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5010/api",
      "type": "string"
    },
    {
      "key": "gatewayUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "userManagementUrl",
      "value": "http://localhost:5020/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Iranian Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ali.ahmadi@example.ir\",\n  \"password\": \"Pass@123456\",\n  \"firstName\": \"علی\",\n  \"lastName\": \"احمدی\",\n  \"phoneNumber\": \"09123456789\",\n  \"gender\": \"Male\",\n  \"dateOfBirth\": \"1990-05-15\"\n}"
            },
            "url": {
              "raw": "{{userManagementUrl}}/v1/auth/register",
              "host": ["{{userManagementUrl}}"],
              "path": ["v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('access_token', jsonData.accessToken);",
                  "    pm.environment.set('refresh_token', jsonData.refreshToken);",
                  "    console.log('✅ Logged in successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ali.ahmadi@example.ir\",\n  \"password\": \"Pass@123456\"\n}"
            },
            "url": {
              "raw": "{{userManagementUrl}}/v1/auth/login",
              "host": ["{{userManagementUrl}}"],
              "path": ["v1", "auth", "login"]
            }
          }
        }
      ]
    },
