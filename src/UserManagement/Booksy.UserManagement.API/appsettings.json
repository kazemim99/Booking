{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=54321;Database=booksy_user_management;Username=booksy_admin;Password=Booksy@2024!;Include Error Detail=true",
    "Redis": "localhost:6379,password=Redis@2024!",
    "RabbitMQ": "amqp://booksy_admin:Booksy@2024!@localhost:5672"
  },
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-for-production-use-key-vault",
    "Issuer": "https://api.booksy.com",
    "Audience": "https://booksy.com",
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Email": {
    "Provider": "SendGrid",
    "ApiKey": "your-sendgrid-api-key",
    "FromEmail": "noreply@booksy.com",
    "FromName": "Booksy"
  },
  "Sms": {
    "Provider": "Twilio",
    "AccountSid": "your-twilio-account-sid",
    "AuthToken": "your-twilio-auth-token",
    "FromNumber": "+1234567890"
  },
  "Cache": {
    "Provider": "Redis",
    "DefaultExpirationMinutes": 5,
    "SlidingExpiration": true
  },
  "EventBus": {
    "Provider": "RabbitMQ",
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "RetryCount": 5
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://booksy.com",
      "https://app.booksy.com"
    ]
  },
  "RateLimit": {
    "DefaultLimit": 100,
    "AuthenticationLimit": 5,
    "RegistrationLimit": 3,
    "PasswordResetLimit": 3
  },
  "Security": {
    "PasswordPolicy": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredUniqueChars": 4
    },
    "Lockout": {
      "MaxFailedAccessAttempts": 5,
      "LockoutDuration": 15
    },
    "TwoFactor": {
      "Issuer": "Booksy",
      "TokenLifespan": 300
    }
  },
  "Application": {
    "BaseUrl": "https://api.booksy.com",
    "ClientUrl": "https://booksy.com",
    "SupportEmail": "support@booksy.com"
  },
  "Monitoring": {
    "ApplicationInsights": {
      "InstrumentationKey": "your-app-insights-key"
    },
    "Sentry": {
      "Dsn": "your-sentry-dsn"
    }
  },
  "FeatureFlags": {
    "EnableTwoFactorAuthentication": true,
    "EnableSocialLogin": false,
    "EnableEmailVerification": true,
    "EnablePasswordHistory": true
  }
}