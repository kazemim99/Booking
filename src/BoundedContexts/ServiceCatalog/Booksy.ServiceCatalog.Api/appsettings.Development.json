{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.EntityFrameworkCore": "Information",
      "Booksy.ServiceCatalog": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=54321;Database=booksy_service_catalog_dev;Username=booksy_admin;Password=Booksy@2024!;Include Error Detail=true",
    "Redis": "localhost:6379,password=Redis@2024!",
    "RabbitMQ": "amqp://booksy_admin:Booksy@2024!@localhost:5672"
  },
  "Jwt": {
    "SecretKey": "development-secret-key-min-256-bits-long-do-not-use-in-production",
    "TokenExpirationMinutes": 120
  },
  "ServiceCatalog": {
    "MaxServicesPerProvider": 10,
    "DefaultCurrency": "USD",
    "PricingRules": {
      "MaxServicePrice": 1000.00,
      "MinServicePrice": 1.00,
      "AllowedCurrencies": [ "USD", "EUR" ]
    }
  },
  "Search": {
    "Provider": "InMemory",
    "MaxResults": 50,
    "DefaultPageSize": 10,
    "EnableFullTextSearch": false,
    "LocationSearch": {
      "EnableGeoLocation": false
    }
  },
  "Validation": {
    "BusinessRules": {
      "EnableProviderVerification": false,
      "RequireBusinessLicense": false,
      "EnableServiceApproval": false
    },
    "ContentModeration": {
      "EnableProfanityFilter": false,
      "EnableContentScanning": false,
      "RequireImageModeration": false
    }
  },
  "Cache": {
    "Provider": "InMemory",
    "DefaultExpirationMinutes": 5
  },
  "EventBus": {
    "Provider": "InMemory"
  },
  "FileStorage": {
    "BasePath": "wwwroot/uploads",
    "MaxFileSizeMB": 10
  },
  "ExternalServices": {
    "LocationService": {
      "Provider": "Mock",
      "EnableAddressValidation": false
    },
    "ImageService": {
      "Provider": "Local",
      "EnableImageOptimization": true,
      "EnableImageResizing": true
    }
  },
  "Application": {
    "BaseUrl": "https://localhost:7002",
    "ClientUrl": "http://localhost:3000",
    "ServiceName": "Booksy ServiceCatalog API (Development)"
  },
  "Services": {
    "UserManagement": {
      "BaseUrl": "https://localhost:5021/api",
      "ApiKey": ""
    }
  },
  "FeatureFlags": {
    "EnableSwagger": true,
    "EnableDeveloperExceptionPage": true,
    "EnableProviderVerification": false,
    "EnableServiceApproval": false,
    "EnableAdvancedSearch": true,
    "EnableLocationBasedSearch": false,
    "EnableServiceRecommendations": false,
    "EnablePricingTiers": true,
    "EnableServiceOptions": true,
    "EnableMobileServices": true
  }
}