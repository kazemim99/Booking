{
  "NotificationSettings": {
    "SendGrid": {
      "ApiKey": "SG.xxxxxxxxxxxxx",
      "FromEmail": "noreply@booksy.com",
      "FromName": "Booksy Platform",
      "Templates": {
        "BookingConfirmation": "d-template-id-booking-confirmation",
        "BookingReminder": "d-template-id-booking-reminder",
        "BookingCancellation": "d-template-id-booking-cancellation",
        "PaymentReceipt": "d-template-id-payment-receipt",
        "PaymentFailed": "d-template-id-payment-failed",
        "WelcomeEmail": "d-template-id-welcome",
        "EmailVerification": "d-template-id-email-verification",
        "PasswordReset": "d-template-id-password-reset"
      }
    },
    "Sms": {
      "Provider": "Rahyab",
      "ApiKey": "xxxxxxxxxxxxx",
      "ApiUrl": "https://api.rahyab.ir/v1",
      "SenderNumber": "+989123456789",
      "Username": "booksy_user",
      "Password": "secure_password",
      "Templates": {
        "BookingConfirmation": "Your booking #{BookingId} is confirmed for {ServiceName} on {BookingDate}. Provider: {ProviderName}",
        "BookingReminder": "Reminder: Your appointment for {ServiceName} is in 1 hour at {ProviderName}",
        "PhoneVerification": "Your Booksy verification code is: {Code}. Valid for 10 minutes.",
        "BookingCancellation": "Your booking #{BookingId} has been cancelled. Reason: {Reason}"
      }
    },
    "Firebase": {
      "ProjectId": "booksy-notifications",
      "ServerKey": "xxxxxxxxxxxxx",
      "SenderId": "123456789",
      "ServiceAccountJsonPath": "firebase-service-account.json",
      "Topics": {
        "AllUsers": "all-users",
        "Customers": "customers",
        "Providers": "providers"
      }
    },
    "SignalR": {
      "HubUrl": "/notifications-hub",
      "EnableDetailedErrors": true,
      "KeepAliveInterval": "00:00:15",
      "ClientTimeoutInterval": "00:00:30",
      "HandshakeTimeout": "00:00:30",
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001",
        "https://booksy.com",
        "https://www.booksy.com"
      ]
    },
    "RateLimiting": {
      "MaxNotificationsPerUserPerHour": 50,
      "MaxNotificationsPerUserPerDay": 200,
      "MaxBulkNotificationRecipients": 1000,
      "MaxOtpRequestsPerPhonePerHour": 5,
      "MaxOtpRequestsPerPhonePerDay": 10
    },
    "Retry": {
      "MaxAttempts": 3,
      "InitialDelay": "00:00:05",
      "MaxDelay": "00:05:00",
      "BackoffMultiplier": 2.0
    },
    "DeliveryOptions": {
      "DefaultPriority": "Normal",
      "EnableScheduling": true,
      "DefaultExpirationHours": 72,
      "PreferredChannelOrder": [
        "PushNotification",
        "Email",
        "SMS",
        "InApp"
      ]
    },
    "Logging": {
      "LogSuccessfulDeliveries": true,
      "LogFailedDeliveries": true,
      "LogRetryAttempts": true,
      "EnablePerformanceMetrics": true
    }
  },
  "Hangfire": {
    "SchemaName": "hangfire",
    "QueuePollInterval": "00:00:15",
    "WorkerCount": 5,
    "Queues": [
      "critical",
      "default",
      "notifications",
      "low"
    ],
    "DashboardPath": "/hangfire",
    "DashboardTitle": "Booksy - Background Jobs",
    "EnableDashboard": true
  }
}
