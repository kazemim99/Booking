{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Booksy.ServiceCatalog": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "#{AzureKeyVault:ServiceCatalogDatabaseConnectionString}#",
    "Redis": "#{AzureKeyVault:RedisConnectionString}#",
    "RabbitMQ": "#{AzureKeyVault:RabbitMQConnectionString}#"
  },
  "Jwt": {
    "SecretKey": "#{AzureKeyVault:JwtSecretKey}#",
    "Issuer": "https://api.booksy.com",
    "Audience": "https://booksy.com"
  },
  "ServiceCatalog": {
    "MaxServicesPerProvider": 100,
    "PricingRules": {
      "MaxServicePrice": 50000.00,
      "AllowedCurrencies": [ "USD", "EUR", "GBP", "CAD", "AUD", "JPY" ]
    }
  },
  "Search": {
    "Provider": "Elasticsearch",
    "ConnectionString": "#{AzureKeyVault:ElasticsearchConnectionString}#",
    "EnableFullTextSearch": true,
    "LocationSearch": {
      "EnableGeoLocation": true
    }
  },
  "Validation": {
    "BusinessRules": {
      "EnableProviderVerification": true,
      "RequireBusinessLicense": true,
      "EnableServiceApproval": true
    },
    "ContentModeration": {
      "EnableProfanityFilter": true,
      "EnableContentScanning": true,
      "RequireImageModeration": true
    }
  },
  "Cache": {
    "Provider": "Redis",
    "DefaultExpirationMinutes": 60
  },
  "EventBus": {
    "Provider": "ServiceBus",
    "ConnectionString": "#{AzureKeyVault:ServiceBusConnectionString}#"
  },
  "ExternalServices": {
    "LocationService": {
      "ApiKey": "#{AzureKeyVault:GoogleMapsApiKey}#",
      "EnableAddressValidation": true
    },
    "ImageService": {
      "Provider": "Azure",
      "ConnectionString": "#{AzureKeyVault:AzureStorageConnectionString}#",
      "EnableImageOptimization": true,
      "EnableImageResizing": true
    }
  },
  "Application": {
    "BaseUrl": "https://servicecatalog-api.booksy.com",
    "ClientUrl": "https://booksy.com",
    "ServiceName": "Booksy ServiceCatalog API"
  },
  "Monitoring": {
    "ApplicationInsights": {
      "InstrumentationKey": "#{AzureKeyVault:ServiceCatalogAppInsightsKey}#"
    },
    "Sentry": {
      "Dsn": "#{AzureKeyVault:ServiceCatalogSentryDsn}#",
      "Environment": "production"
    }
  },
  "FeatureFlags": {
    "EnableProviderVerification": true,
    "EnableServiceApproval": true,
    "EnableAdvancedSearch": true,
    "EnableLocationBasedSearch": true,
    "EnableServiceRecommendations": true,
    "EnablePricingTiers": true,
    "EnableServiceOptions": true,
    "EnableMobileServices": true
  }
}