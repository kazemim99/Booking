{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=booksy;Username=postgres;Password=yourpassword",
    "Redis": "localhost:6379"
  },

  "SendGrid": {
    "ApiKey": "SG.your-sendgrid-api-key-here",
    "FromEmail": "noreply@booksy.com",
    "FromName": "Booksy",
    "ReplyToEmail": "support@booksy.com",
    "EnableClickTracking": true,
    "EnableOpenTracking": true
  },

  "Rahyab": {
    "ApiKey": "your-rahyab-api-key",
    "BaseUrl": "https://api.rahyab.ir",
    "SenderId": "10008663",
    "Username": "your-username",
    "Password": "your-password"
  },

  "Firebase": {
    "ServerKey": "your-firebase-server-key",
    "SenderId": "your-sender-id",
    "ProjectId": "booksy-firebase-project"
  },

  "SignalR": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://localhost:5173",
      "https://yourdomain.com",
      "https://app.yourdomain.com"
    ],
    "EnableDetailedErrors": false,
    "ClientTimeoutSeconds": 60,
    "HandshakeTimeoutSeconds": 30,
    "KeepAliveIntervalSeconds": 15,
    "MaxMessageSizeBytes": 1048576
  },

  "Notification": {
    "DefaultExpirationHours": 72,
    "MaxRetryAttempts": 5,
    "RetryDelays": [5, 15, 45, 135, 405],
    "ProcessorIntervalSeconds": 30,
    "SchedulerIntervalMinutes": 1,
    "CleanupIntervalHours": 1,
    "BatchSize": 100,
    "MaxNotificationsPerDay": 1000,
    "EnableRateLimiting": true,
    "RateLimitWindow": "00:01:00",
    "RateLimitMax": 10
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Booksy.ServiceCatalog.Application.Services.BackgroundServices": "Information",
      "Booksy.ServiceCatalog.Application.EventHandlers": "Information",
      "Booksy.Infrastructure.External.Notifications": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    },
    "File": {
      "Path": "Logs/notifications-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
    }
  },

  "AllowedHosts": "*"
}
